<h1>Listings</h1>

<section class="cards">
  <% @listings.reverse.each do |listing| %>
    <div class="card" style="width: 20rem;">
      <%= image_tag listing.picture, class: "card-img-top", alt: "listing_picture" if listing.picture.attached? %>
      <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text"><%= listing.description %></p>

        <section class="card-buttons">
          <%= link_to 'Show', listing, class: "btn btn-info" %>

          <% if user_signed_in? && current_user.id == listing.user_id %>
            <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-light" %>
            <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end %>
        </section>
        
      </div>
    </div>
  <% end %>
</section>

<%= link_to 'New Listing', new_listing_path %>

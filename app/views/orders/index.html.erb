<div class="accordion" id="accordionOrders">
    <% index = 1 %>
    <% @orders.reverse.each do |order| %>
        <div class="card">

            <div class="card-header" id="heading<%= index %>">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapseOne">
                    <%= "Title: #{order.title} - Purchased: #{order.created_at}" %>
                    </button>
                </h2>
            </div>

            <div id="collapse<%= index %>" class="collapse show" aria-labelledby="heading<%= index %>" data-parent="#accordionOrders">
                <div class="card-body">
                    <strong>Description: </strong>
                    <%= order.description %><br>
                    <strong>Condition: </strong>
                    <%= order.condition %><br>
                    <strong>Category: </strong>
                    <% order.category[0..].each do |ord| %>
                        <%= ord %> 
                    <% end %><br>
                    <strong>Cost: </strong>
                    <%= order.price %>
                </div>
            </div>

        </div>
        <% index += 1 %>
    <% end %>
